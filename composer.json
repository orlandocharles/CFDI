{
    "name": "eclipxe/cfdi",
    "description": "Library to create a Mexican CFDI 3.3 (Comprobante Fiscal por Internet)",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "mexico", "sat", "cfdi", "cfdi3.3"
    ],
    "authors": [
        {
            "name": "Carlos C Soto",
            "email": "eclipxe13@gmail.com",
            "homepage": "http://eclipxe.com.mx/"
        },
        {
            "name": "Orlando Charles",
            "homepage": "https://github.com/orlandocharles/cfdi/",
            "role": "original developer"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": "^7.0",
        "eclipxe/cfdiutils": "^1.0",
        "eclipxe/xmlresourceretriever": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0",
        "jakub-onderka/php-parallel-lint": "^0.9",
        "squizlabs/php_codesniffer": "^3.0",
        "friendsofphp/php-cs-fixer": "^2.4",
        "phpstan/phpstan-shim": "^0.8"
    },
    "autoload": {
        "psr-4": {
            "PhpCfdi\\CFDI\\": "src/CFDI"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhpCfdi\\CFDITests\\": "tests/CFDITests"
        }
    },
    "prefer-stable": true
}
